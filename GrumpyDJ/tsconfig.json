{

  "compileOnSave": true,
  "filesGlob": [
    "!/node_modules/**/*.ts",
    "/app/**/*.*.ts",
    "/app/**/*.{ts,tsx}"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": false,
    "sourceMap": true
  },
  "exclude": [ "node_modules" ]


}